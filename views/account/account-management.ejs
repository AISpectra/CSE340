<main id="account-management">
  <h1><%= title %></h1>

  <%- messages() %>

  <% if (locals.accountData) { %>
    <!-- Saludo siempre -->
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>

    <!-- Enlace para actualizar cuenta (todos los tipos) -->
    <p>
      <a href="/account/update/<%= locals.accountData.account_id %>">
        Update account information
      </a>
    </p>

    <!-- SOLO Employee / Admin: Inventory Management -->
    <% if (
      locals.accountData.account_type === "Employee" ||
      locals.accountData.account_type === "Admin"
    ) { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/">Go to Inventory Management</a>
      </p>
    <% } %>
  <% } else { %>
    <p>Please <a href="/account/login">log in</a>.</p>
  <% } %>
</main>
