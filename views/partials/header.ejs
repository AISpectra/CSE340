<header id="top-header" class="site-header">
  <div class="header-inner">
    <a class="brand" href="/" title="Return to home page">CSE Motors</a>
    <nav id="tools" aria-label="User account tools">
      <ul>
        <% if (locals.loggedin && locals.accountData) { %>
          <li>
            <a href="/account/">
              Welcome <%= locals.accountData.account_firstname %>
            </a>
          </li>
          <li>
            <a href="/account/logout">Logout</a>
          </li>
        <% } else { %>
          <li>
            <a href="/account/login">My Account</a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</header>